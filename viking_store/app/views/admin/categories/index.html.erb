<section>
  <div class="col-md-9 box">
    <h3>Product Categories</h3>

    
    <%= link_to "Add New Category", new_admin_category_path, class: "btn btn-primary btn-default" %>
  

    <div class="panel panel-default">

	    <table class="table">
	      <thead>
	        <tr>
	          <th>ID</th>
	          <th>Name</th>
	          <th>SHOW</th>
	          <th>EDIT</th>
	          <th>DELETE</th>
	        </tr>
	      </thead>
	      <tbody>

	      <% @categories.each do |cat| %>
	        <tr>
	          <td><%= cat.id %></td>
	          <td><%= cat.title %></td>
	          <td><%= link_to "show", admin_category_path(cat) %></td>
	          <td><%= link_to "edit", edit_admin_category_path(cat) %></td>
	          <td><%= link_to "delete", "#" %></td>
	        </tr>
	      <% end %>
	       
	      </tbody>
	    </table>
		</div>


  </div>
</section>
