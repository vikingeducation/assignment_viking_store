<section>
  <div class="col-md-9 box">
    <h3>New Category</h3>

    <%= form_for @category do |f| %>
      <div class="row">
        <div class="col-md-2">
          <strong>Category ID:</strong>
        </div>
     
        <div class="col-md-10">
          <span>N/A</span>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <strong>Name:</strong>
        </div>
      
        <div class="col-md-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter category name here" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= f.submit "Create Category", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  
  </div>
</section>
