<div class="col-md-3 product-box">
	<p class="product-title"><%= @product.title %></p>
	<p class="product-price"><%= @product.price %></p>
	<%= image_tag "#", class: "product-image" %>

	<%= form_tag carts_path(0), method: 'POST' do %>
	  <%= hidden_field_tag(:item, @product.id) %>
	  <%= submit_tag "Add to Cart", class: "product-btn" %>
	<% end %>
</div>