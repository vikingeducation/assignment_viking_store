<div class="login">
  <%= form_tag do %>
  <table>
    <tr>
      <td><%= label_tag(:first_name) %></td>
      <td><%= text_field_tag(:first_name) %></td>
    </tr>
    <tr>
      <td><%= label_tag(:last_name) %></td>
      <td><%= password_field_tag(:last_name) %></td>
    </tr>
     <tr>
      <td><%= label_tag(:email) %></td>
      <td><%= text_field_tag(:email) %></td>
    </tr>
    <tr>
      <td><%= label_tag(:phone_number) %></td>
      <td><%= password_field_tag(:phone_number) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Sign Up") %></td>
    </tr>
  </table>
  <% end %>
</div>
