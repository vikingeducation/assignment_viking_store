<section>
  <div class="col-md-9 box">
    <h3>Edit Product <%= @product.id %></h3>

    <%= form_for @product do |f| %>
      <div class="row">
        <div class="col-md-2">
          <strong>Product ID:</strong>
        </div>
     
        <div class="col-md-10">
          <%= @product.id %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <strong>Name</strong>
        </div>
      
        <div class="col-md-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <strong>Price</strong>
        </div>
      
        <div class="col-md-10">
          <%= f.text_field :price, class: "form-control", placeholder: "$ price" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <strong>Category</strong>
        </div>
      
        <div class="col-md-10">
          <%= f.collection_select( :category_id, Category.all, :id, :title ) %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= f.submit "Update Product", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <%= link_to  "Delete Product", product_path(@product), data: { confirm: "Are you sure?" }, method: :delete %>
  
  </div>
</section>
