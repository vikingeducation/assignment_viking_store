<section>
  <div class="col-md-9 box">
    <h3>New Product</h3>

    <%= form_for @product do |f| %>
      <div class="row">
        <div class="col-md-2">
          <strong>Product ID:</strong>
        </div>
     
        <div class="col-md-10">
          <span>N/A</span>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <strong>Name</strong>
        </div>
      
        <div class="col-md-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter a name" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <strong>Price</strong>
        </div>
      
        <div class="col-md-10">
          <%= f.text_field :price, class: "form-control", placeholder: "$ price" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <strong>Category</strong>
        </div>
      
        <div class="col-md-10">
          <%= f.collection_select( :category_id, Category.all, :id, :title, prompt: 'Please Select') %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= f.submit "Create Product", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  
  </div>
</section>
