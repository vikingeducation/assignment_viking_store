 <div class="col-md-9 box">
    <h3>Product <%="#{@product.id}: #{@product.title}" %></h3>
   
    <h4>Product Information</h4>

    <div class="row">
      <div class="col-md-2">
        <strong>Product ID</strong>
      </div>
      
      <div class="col-md-10">
        <%= @product.id %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2">
        <strong>Name</strong>
      </div>

      <div class="col-md-10">
        <%= @product.title %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2">
        <strong>Price</strong>
      </div>

      <div class="col-md-10">
        <%= @product.price %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2">
        <strong>Category</strong>
      </div>

      <div class="col-md-10">
        <%= @product.category.title %>
      </div>
    </div>

    <h4>Product Statistics</h4>

    <div class="row">
      <div class="col-md-2">
        <strong>Times Ordered</strong>
      </div>

      <div class="col-md-10">
        <%= @product_order_count %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2">
        <strong>Carts In</strong>
      </div>

      <div class="col-md-10">
        <%= @product_cart_count %>
      </div>
    </div>

 
    <%= link_to "Edit Product", "#" %>
    <%= link_to "Delete Product", "#" %>
   
   
  </div>