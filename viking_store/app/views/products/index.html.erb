<section>
  <div class="col-md-9 box">
    <h3>Products</h3>

    
    <%= link_to "Add New Product", new_product_path, class: "btn btn-primary btn-default" %>
  

    <div class="panel panel-default">

	    <table class="table">
	      <thead>
	        <tr>
	          <th>ID</th>
	          <th>Name</th>
	          <th>Price</th>
	          <th>Category</th>
	          <th>SHOW</th>
	          <th>EDIT</th>
	          <th>DELETE</th>
	        </tr>
	      </thead>
	      <tbody>

	      <% @products.each do |prod| %>
	        <tr>
	          <td><%= prod.id %></td>
	          <td><%= prod.title %></td>
	          <td><%= prod.price %></td>
	          <td><%= link_to "#{prod.category.title}", category_path(prod.category) %></td>
	          <td><%= link_to "show", product_path(prod.id) %></td>
	          <td><%= link_to "edit", edit_product_path(prod.id) %></td>
	          <td><%= link_to "delete", "#" %></td>
	        </tr>
	      <% end %>
	       
	      </tbody>
	    </table>
		</div>


  </div>
</section>
