<h3 class="text-center">Add Products to Order</h3>
<p class="text-center"><em>Add up to 5 products at a time.</em></p>
<br>

<%= form_tag 'contents/add' do %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Product ID</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% 5.times do |item| %>
        <tr>
          <td><%= number_field_tag "items[#{item}][product_id]" %></td>
          <td><%= number_field_tag "items[#{item}][quantity]" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= submit_tag 'Add Products', class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <br>
<% end %>