<%= form_for [:admin, @user] do |f| %>

  <h3 class="text-center">Demographic Information</h3>

  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-3 control-label" %>
      <%= field_with_errors(@user, :first_name) %>
      <div class="col-sm-8">
        <%= f.text_field :first_name, class: "form-control", placeholder: "Jane" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-3 control-label" %>
      <%= field_with_errors(@user, :last_name) %>
      <div class="col-sm-8">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Smith" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <%= field_with_errors(@user, :email) %>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "jane@gmail.com" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, class: "col-sm-3 control-label" %>
      <%= field_with_errors(@user, :phone_number) %>
      <div class="col-sm-8">
        <%= f.text_field :phone_number, class: "form-control", placeholder: "504-555-1212" %>
      </div>
    </div>
  </div>

  <% if @user.persisted? %>
    <br>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="form-group">
          <%= f.label :billing_id, 'Default Billing Address' %>
          <%= field_with_errors(@user, :billing_id) %>
          <%= f.collection_select :billing_id, @addresses, :id, :one_line, {prompt: "Select an address"}, {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.label :shipping_id, 'Default Shipping Address' %>
          <%= field_with_errors(@user, :shipping_id) %>
          <%= f.collection_select :shipping_id, @addresses, :id, :one_line, {prompt: "Select an address"}, {class: "form-control"} %>
        </div>

        <p>
          <%= link_to 'View Saved Addresses', admin_user_addresses_path(@user) %>
        </p>
      </div>
    </div>
  <% end %>

  <br>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <br>

<% end %>