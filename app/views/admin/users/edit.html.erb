<h2 class="text-center">Edit User <%= @user.id %>: <%= @user.name %></h2>

<div class="panel panel-default">
  <div class="panel-body">
    <%= render 'form' %>

    <p class="text-center">
      <%= link_to "Delete #{@user.name}", admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
</div>
