<div class="col-sm-4">
  <div class="panel panel-default panel-product text-center">

    <div class="panel-heading">
      <h4><%= product.name %></h4>
    </div>

    <div class="panel-body" style="background-image: url('http://placehold.it/250x200');">
      <span class="price-tag pull-right text-muted">
        <%= number_to_currency product.price %>
      </span>
    </div>

    <div class="panel-footer">
      <%= link_to 'Add to Cart', order_contents_path(product_id: product.id), method: :post, class: 'btn btn-primary' %>
    </div>

  </div>
</div>
