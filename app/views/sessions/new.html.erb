<h2 class="text-center">Sign In or Sign Up</h2>
<br>

<div class="row">
  <div class="col-sm-6">
    <h4 class="text-muted text-center">
      <em>I have an account...</em>
    </h4>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag('/session', method: 'post') do %>

          <div class="form-group">
            <%= label_tag :email, 'Email Address' %>
            <%= text_field_tag :email, nil, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>

          <p>
            <%= submit_tag 'Sign In', class: 'btn btn-primary btn-block' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <h4 class="text-muted text-center">
      <em>I do NOT have an account...</em>
    </h4>

    <div class="panel panel-default">
      <div class="panel-body">
        <p>
          <%= link_to 'Sign Up', new_user_path, class: 'btn btn-primary btn-block' %>
        </p>
      </div>
    </div>
  </div>
</div>
